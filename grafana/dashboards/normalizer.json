      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(events_received_total{service=\"normalizer\"}[5m])",
          "legendFormat": "Received",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        },
        {
          "refId": "B",
          "expr": "rate(events_processed_total{service=\"normalizer\"}[5m])",
          "legendFormat": "Processed",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
